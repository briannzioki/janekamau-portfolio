/* src/styles/tokens.css */
/* Design tokens and utilities */

:root {
  /* Surfaces */
  --bg: #FBEACE;
  --bg-elevated: #FFFFFF;
  --bg-soft: #F7E6BC;

  /* Text */
  --text: #141311;
  --text-muted: color-mix(in srgb, var(--text) 60%, transparent);
  --text-on-primary: #FFFFFF;

  /* Borders & outlines */
  --border: color-mix(in srgb, var(--text) 16%, transparent);
  --ring: #6F5363;

  /* Brand & accents */
  --primary: #B0E322;
  --primary-contrast: #141311;
  --accent: #FE7765;
  --accent-2: #3ABF65;
  --accent-3: #AC6D88;

  /* Gradients */
  --brand-gradient-from: #B0E322;
  --brand-gradient-via: #FE7765;
  --brand-gradient-to: #6F5363;

  /* Shadow & glow */
  --shadow-color: 28 20 38;
  --glow-primary: 176 227 34;
  --glow-accent: 254 119 101;

  /* Radii */
  --radius: 16px;
  --radius-lg: 24px;
  --radius-xl: 32px;

  /* Misc */
  --container: 1200px;
  --transition: 200ms cubic-bezier(.2,.8,.2,1);
}

.dark {
  --bg: #141311;
  --bg-elevated: #1B1720;
  --bg-soft: #231E27;

  --text: #F5F3EE;
  --text-muted: color-mix(in srgb, var(--text) 60%, transparent);
  --border: color-mix(in srgb, #ffffff 14%, transparent);
  --ring: #B0E322;

  --primary: #B0E322;
  --primary-contrast: #141311;
  --accent: #FE7765;
  --accent-2: #3ABF65;
  --accent-3: #AC6D88;

  --brand-gradient-from: #6F5363;
  --brand-gradient-via: #FE7765;
  --brand-gradient-to: #B0E322;

  --shadow-color: 6 4 9;
  --glow-primary: 176 227 34;
  --glow-accent: 254 119 101;
}

/* Base element theming */
html, body { background: var(--bg); color: var(--text); }
.__container { max-width: var(--container); margin-inline: auto; padding-inline: 1rem; }

/* Reusable gradient helper */
.brand-gradient {
  background-image: linear-gradient(135deg, var(--brand-gradient-from), var(--brand-gradient-via), var(--brand-gradient-to));
}

/* Token-driven utilities */
@layer utilities {
  .bg-surface { background-color: var(--bg-soft); }
  .bg-elevated { background-color: var(--bg-elevated); }
  .text-muted { color: var(--text-muted); }
  .text-text  { color: var(--text); }
  .bg-primary { background-color: var(--primary); }
  .bg-accent  { background-color: var(--accent); }
  .border-token { border-color: var(--border); }
  .shadow-soft { box-shadow: 0 10px 30px rgba(var(--shadow-color) / 0.25); }

  .shadow-glow {
    box-shadow:
      0 1px 2px rgba(var(--shadow-color) / 0.2),
      0 10px 30px rgba(var(--shadow-color) / 0.25),
      0 0 0 2px transparent;
    transition: box-shadow var(--transition), transform var(--transition);
  }
  .shadow-glow:hover {
    box-shadow:
      0 2px 6px rgba(var(--shadow-color) / 0.25),
      0 16px 40px rgba(var(--shadow-color) / 0.35),
      0 0 0 2px rgba(var(--glow-primary) / 0.25);
    transform: translateY(-2px);
  }
  .shadow-glow-lg {
    box-shadow:
      0 10px 30px rgba(var(--shadow-color) / 0.35),
      0 40px 80px rgba(var(--shadow-color) / 0.45),
      0 0 0 3px rgba(var(--glow-primary) / 0.25);
  }
}

/* Focus helper */
:focus-visible { outline: 2px solid var(--ring); outline-offset: 2px; }

/* Buttons & badges */
.btn {
  border-radius: 999px;
  padding: .6rem 1rem;
  background: var(--primary);
  color: var(--text-on-primary);
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  gap: .5rem;
  transition: filter var(--transition), transform var(--transition), box-shadow var(--transition);
  box-shadow: 0 8px 24px rgba(var(--glow-primary) / 0.35);
}
.btn:hover { filter: brightness(1.02); transform: translateY(-1px); }
.btn.secondary { background: var(--accent); box-shadow: 0 8px 24px rgba(var(--glow-accent) / 0.3); }
.badge {
  display: inline-flex; align-items: center; padding: .25rem .6rem;
  border-radius: 999px; font-size: .75rem; font-weight: 600;
  background: color-mix(in srgb, var(--primary) 18%, transparent);
  color: var(--primary-contrast);
}